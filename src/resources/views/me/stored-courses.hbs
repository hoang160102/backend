<div class='mt-4'>
    <h2>Khoa hoc cua toi</h2>
    <table class='table table-striped'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Ten khoa hoc</th>
                <th scope='col'>Trinh do</th>
                <th scope='col'>Ngay tao</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope='row'>{{inc @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/course/{{this._id}}/edit" class="btn btn-link">Sua</a>
                    <a href="" class="btn btn-link">Xoa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>