<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
        <div class='col-sm-6 mt-4'>
            <div class='card'>
                <a href="/course/{{this.slug}}">
                    <img class='card-img-top' src="{{this.image}}" alt='' />
                </a>
                <div class='card-body'>
                    <a href="/course/{{this.slug}}">
                        <h5 class='card-title'>{{this.name}}</h5>
                    </a>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='#' class='btn btn-primary'>Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>